<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Signin">

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/phone"
        android:layout_width="403dp"
        android:layout_height="137dp"
        android:layout_marginTop="244dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:drawablePadding="25dp"
        android:drawingCacheQuality="high"
        android:hint="@string/phone_number"
        android:inputType="text"
        android:textColor="@color/cardview_light_background"
        android:textSize="35sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:met_textColorHint="@color/cardview_light_background"
        app:met_textColor="@color/cardview_light_background"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/pnr"
        android:layout_width="403dp"
        android:layout_height="137dp"
        android:layout_marginTop="432dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:drawableEnd="@color/common_google_signin_btn_text_dark_focused"
        android:drawableBottom="@color/common_google_signin_btn_text_dark_focused"
        android:hint="PNR no"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:met_textColorHint="@color/cardview_light_background"
        android:drawableRight="@color/common_google_signin_btn_text_dark_focused"
        app:met_textColor="@color/cardview_light_background"/>

    <info.hoang8f.widget.FButton
        android:id="@+id/button2"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="592dp"
        android:layout_marginEnd="132dp"
        android:layout_marginRight="132dp"
        android:text="Search Food"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <info.hoang8f.widget.FButton
    android:id="@+id/button3"
    android:layout_width="175dp"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentBottom="true"
    android:layout_marginTop="652dp"
    android:layout_marginEnd="132dp"
    android:layout_marginRight="132dp"
    android:text="PNR Status"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <info.hoang8f.widget.FButton
    android:id="@+id/button4"
    android:layout_width="175dp"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentBottom="true"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="220dp"
    android:layout_marginRight="220dp"
    android:text="Back To Main Menu"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent" />



    </android.support.constraint.ConstraintLayout>

